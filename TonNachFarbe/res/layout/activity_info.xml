<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_backg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InfoActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Angelenhnt an synästhtisches Empfinden verknüpft diese App Farben mit Musik. Dabei gilt es, Objekte der Farben Rot, Grün und Blau mit der Kamera zu erfassen, um so verschiedene Tonspuren abzuspielen."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="34dp"
        android:text="Die Synästhesie bezeichnet die Verknüpfung physisch getrennter Sinneswahrnehmungen, wie beispielsweise Farbe und Temperatur. Synästhesie ist sehr subjektiv und heterogen ausgeprägt."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="16dp"
        android:text="Ein gutes Beispiel für synästhetisches Schaffen liefert der Maler Wassily Kandinsky. Selber Synästhet, verknüpfte er Malerei und Musik."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12dp" />

        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
